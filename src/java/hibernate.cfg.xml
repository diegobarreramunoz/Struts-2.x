<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
    <property name="hibernate.connection.url">jdbc:sqlserver://;databaseName=BDserviciotecnico</property>
    <property name="hibernate.connection.username">sa</property>
    <property name="hibernate.connection.password"></property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="modelo/mapeo/Personal.hbm.xml"/>
    <mapping resource="modelo/mapeo/Cliente.hbm.xml"/>
    <mapping resource="modelo/mapeo/OrdenTrabajo.hbm.xml"/>
    <mapping resource="modelo/mapeo/Tienda.hbm.xml"/>
    <mapping resource="modelo/mapeo/Equipo.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
